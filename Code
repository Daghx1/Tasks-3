void setup()
{ 
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
 
  pinMode (8, INPUT);
  pinMode(9, INPUT);
  
  Serial.begin (9600); 
}

void loop()
{
   Serial.print (" Button 1 : ");
    Serial.println (digitalRead(8));
  
  delay (10);
  
  Serial.print (" Button 2 : ");
    Serial.println (digitalRead(9));

   if(digitalRead (8)==1){
   digitalWrite (2,HIGH);
  }
  if(digitalRead (9)==1){
   digitalWrite (3,HIGH);
  }

  else {
    digitalWrite (2,LOW);
    digitalWrite (3,LOW);
  }
}

